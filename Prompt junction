    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Page Navigation Logic ---
            const pages = document.querySelectorAll('main[id^="page-"]');
            const navLinks = document.querySelectorAll('.nav-link');
            const desktopImagesButton = document.getElementById('desktop-images-button');

            function showPage(pageId, anchor = null) {
                pages.forEach(page => page.classList.add('hidden'));
                const targetPage = document.getElementById(`page-${pageId}`);
                if (targetPage) targetPage.classList.remove('hidden');

                navLinks.forEach(link => {
                    const linkPage = link.dataset.page;
                    link.classList.toggle('active', linkPage === pageId || (link.id === 'desktop-images-button' && pageId === 'images'));
                });

                if (anchor) {
                    const targetElement = document.getElementById(anchor);
                    if (targetElement) setTimeout(() => targetElement.scrollIntoView({ behavior: 'smooth' }), 0);
                } else {
                    window.scrollTo(0, 0);
                }
            }

            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.dataset.page;
                    const anchorId = this.dataset.anchor;
                    if (pageId) showPage(pageId, anchorId);
                    if (!mobileMenu.classList.contains('hidden')) mobileMenu.classList.add('hidden');
                    if (!desktopImagesDropdown.classList.contains('hidden')) desktopImagesDropdown.classList.add('hidden');
                });
            });

            showPage('home');

            // --- Dropdown Menu Logic ---
            const desktopImagesDropdown = document.getElementById('desktop-images-dropdown');
            desktopImagesButton.addEventListener('click', (e) => {
                e.stopPropagation();
                desktopImagesDropdown.classList.toggle('hidden');
            });
            window.addEventListener('click', () => desktopImagesDropdown.classList.add('hidden'));

            // --- Mobile menu toggle ---
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileImagesButton = document.getElementById('mobile-images-button');
            const mobileImagesDropdown = document.getElementById('mobile-images-dropdown');
            mobileMenuButton.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
            mobileImagesButton.addEventListener('click', () => mobileImagesDropdown.classList.toggle('hidden'));

            // --- Notification Logic ---
            const notification = document.getElementById('notification');
            function showNotification(message, isSuccess = true) {
                notification.textContent = message;
                notification.classList.toggle('bg-green-500', isSuccess);
                notification.classList.toggle('bg-red-500', !isSuccess);
                notification.classList.remove('opacity-0');
                setTimeout(() => notification.classList.add('opacity-0'), 3000);
            }

            // --- Copy to clipboard functionality ---
            const copyButtons = document.querySelectorAll('.copy-btn');
            function copyText(text) {
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    showNotification('Prompt copied to clipboard!');
                } catch (err) {
                    console.error('Failed to copy text: ', err);
                    showNotification('Failed to copy!', false);
                }
                document.body.removeChild(textArea);
            }
            copyButtons.forEach(button => button.addEventListener('click', () => copyText(button.dataset.clipboardText)));

            // --- Share Prompt Modal Logic ---
            const shareModal = document.getElementById('share-modal');
            const openShareModalButtons = document.querySelectorAll('.share-prompt-btn');
            const closeShareModalButton = document.getElementById('close-share-modal-btn');
            const submitPromptButton = document.getElementById('submit-prompt-btn');
            const sharePromptInput = document.getElementById('share-prompt-input');

            openShareModalButtons.forEach(btn => btn.addEventListener('click', () => shareModal.classList.remove('hidden')));
            closeShareModalButton.addEventListener('click', () => shareModal.classList.add('hidden'));
            submitPromptButton.addEventListener('click', () => {
                const promptText = sharePromptInput.value.trim();
                if (promptText) {
                    console.log('Submitted Prompt:', promptText); // Placeholder for actual submission
                    sharePromptInput.value = '';
                    shareModal.classList.add('hidden');
                    showNotification('Thank you for your submission!');
                } else {
                    showNotification('Please enter a prompt to share.', false);
                }
            });

            // --- Gemini API Generation Modal ---
            const generationModal = document.getElementById('generation-modal');
            const openModalButtons = document.querySelectorAll('.generate-idea-btn');
            const closeModalButton = document.getElementById('close-modal-btn');
            const modalTitle = document.getElementById('modal-title');
            const keywordInput = document.getElementById('keyword-input');
            const keywordError = document.getElementById('keyword-error');
            const generateBtn = document.getElementById('generate-btn');
            const copyGeneratedBtn = document.getElementById('copy-generated-btn');
            const generateAgainBtn = document.getElementById('generate-again-btn');
            const generatedPromptText = document.getElementById('generated-prompt-text');
            const inputSection = document.getElementById('modal-input-section');
            const loadingSection = document.getElementById('modal-loading-section');
            const resultSection = document.getElementById('modal-result-section');

            let currentPromptType = 'image';

            openModalButtons.forEach(button => {
                button.addEventListener('click', () => {
                    currentPromptType = button.dataset.type;
                    modalTitle.textContent = `Generate an ${currentPromptType.charAt(0).toUpperCase() + currentPromptType.slice(1)} Prompt`;
                    keywordInput.placeholder = `e.g., 'a brave knight' or 'building a weather app'`;
                    inputSection.classList.remove('hidden');
                    loadingSection.classList.add('hidden');
                    resultSection.classList.add('hidden');
                    keywordError.classList.add('hidden');
                    keywordInput.value = '';
                    generationModal.classList.remove('hidden');
                });
            });

            closeModalButton.addEventListener('click', () => generationModal.classList.add('hidden'));
            generateAgainBtn.addEventListener('click', () => {
                inputSection.classList.remove('hidden');
                loadingSection.classList.add('hidden');
                resultSection.classList.add('hidden');
                keywordError.classList.add('hidden');
                keywordInput.value = '';
            });
            copyGeneratedBtn.addEventListener('click', () => copyText(generatedPromptText.textContent));

            generateBtn.addEventListener('click', async () => {
                const keyword = keywordInput.value.trim();
                keywordError.classList.add('hidden');
                if (!keyword) {
                    keywordError.classList.remove('hidden');
                    return;
                }

                inputSection.classList.add('hidden');
                loadingSection.classList.remove('hidden');
                resultSection.classList.add('hidden');

                const systemPrompt = `You are an expert prompt generator for AI models. Generate a creative, detailed, and effective ${currentPromptType} prompt based on the user's keyword. The prompt should be a single paragraph. Do not add any preamble or explanation.`;
                const userQuery = `Keyword: "${keyword}"`;
                const apiKey = ""; // This will be handled by the environment
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    systemInstruction: { parts: [{ text: systemPrompt }] },
                };

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (!response.ok) throw new Error(`API request failed with status ${response.status}`);
                    const result = await response.json();
                    const generatedText = result.candidates?.[0]?.content?.parts?.[0]?.text;
                    if (generatedText) {
                        generatedPromptText.textContent = generatedText;
                        loadingSection.classList.add('hidden');
                        resultSection.classList.remove('hidden');
                    } else {
                        throw new Error("No content generated.");
                    }
                } catch (error) {
                    console.error("Error calling Gemini API:", error);
                    generatedPromptText.textContent = "Sorry, something went wrong. Please try again.";
                    loadingSection.classList.add('hidden');
                    resultSection.classList.remove('hidden');
                }
            });
        });
    </script>

</body>
</html>
